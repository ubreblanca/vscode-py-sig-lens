{
  "name": "python-signature-lens",
  "displayName": "Python Signature Lens",
  "description": "Display Haskell-style type signatures above Python functions",
  "version": "0.0.2",
  "publisher": "ubreblanca",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ubreblanca/vscode-py-sig-lens"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Python Signature Lens",
      "properties": {
        "pythonSignatureLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Haskell-style signatures above Python functions"
        },
        "pythonSignatureLens.showFunctionName": {
          "type": "boolean",
          "default": true,
          "description": "Show function name in signature (e.g., 'fn :: A -> A' vs 'A -> A')"
        },
        "pythonSignatureLens.haskellStyleApplication": {
          "type": "boolean",
          "default": false,
          "description": "Use Haskell-style type application (e.g., 'Iterable A' instead of 'Iterable[A]')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
